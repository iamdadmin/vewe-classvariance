{
    "name": "vewe/mcva",
    "description": "Vewe Merge Class Variance Authority - a combined implementation of CVA and twMerge for PHP",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "tailwind",
        "tailwindcss",
        "css",
        "utility-css",
        "php",
        "twmerge",
        "cva",
        "tailwind-variants"
    ],
    "homepage": "https://github.com/iamdadmin/vewe-tva",
    "support": {
        "issues": "https://github.com/iamdadmin/vewe-tva/issues",
        "source": "https://github.com/iamdadmin/vewe-tva"
    },
    "authors": [
        {
            "name": "iamDadmin"
        }
    ],
    "require": {
        "php": "^8.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "carthage-software/mago": "^1"
    },
    "autoload": {
        "psr-4": {
            "Vewe\\Mcva\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vewe\\Mcva\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit tests --display-warnings --display-skipped --display-deprecations --display-errors --display-notices"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}